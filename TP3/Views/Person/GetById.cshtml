@{
    @model TP3.Models.Person

}
@{
    ViewData["Title"] = "Person By ID";
}



@{
    TP3.Models.Person p = Model;
    if (Model == null)
    {

        <div style="display: flex;justify-content:space-evenly; align-items:center;width:100% ">
            <h1>
                Cet ID est
                invalide
            </h1>
          
        </div>
    }
    else
    {
        <div style="display: flex;justify-content:space-evenly; align-items:center;width:100% ">

            <h1>Person number @Model.Id</h1>
           
        </div>
        
          
        <div class="col mb-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@p.FirstName @p.LastName</h5>
                        <p>Email : @p.Email</p>
                        <p>Country : @p.Country</p>
                        <p>Id : @p.Id</p>

                    </div>
                </div>
        </div>
    }
}